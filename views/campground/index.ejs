
<% include ../partials/header %>
	

<div class="container">
	<header class="jumbotron">
		<div class="container">
		<h1>
		 Welcome to Yelpcamp!!
		</h1>
		<p> View our hand-picked campground form all over the world</p>
		<p> <a class="btn btn-primary btn-lg" href="/campground/new">Add New Campground</a></p>
		</div>
	</header>
	
	<div class="row text-center" style="diplay:flex; flex-wrap:wrap">
		<% campGround.forEach(function(camp){ %>
		<div class="col-md-3 col-sm-6">
			<div class="thumbnail">
				<img src="<%= camp.image %>">
			</div>
			<div class="caption">
				<h4><%= camp.name %> </h4>
			</div>
			<p>
				<a href="/campground/<%= camp.id %>" class="btn btn-primary">More info</a>
			</p>
			
		</div>
		<% }); %>
		
	</div>
</div>

<% include ../partials/footer %>